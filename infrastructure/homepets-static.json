        },
        "position": {
          "x": 180,
          "y": 90
        },
        "z": 1,
        "embeds": [],
        "isrelatedto": [
          "cfb0df3a-47be-41a2-9d8a-7d9de2d096a3"
        ]
      },
      "bf0ec4b0-7c72-4eaa-b6c2-d303c0684dc7": {
        "size": {
