{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "dnshomepetsukcom": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneName": "homepetsuk.com.",
        "RecordSets": [
          {
            "Name": "homepetsuk.com.",
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z3GKZC51ZF0DB4",
              "DNSName": "s3-website.eu-west-2.amazonaws.com"
            }
          }
        ]
      }
    },
    "dnswwwhomepetsukcom": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneName": "homepetsuk.com.",
        "RecordSets": [
          {
            "Name": "www.homepetsuk.com.",
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z3GKZC51ZF0DB4",
              "DNSName": "s3-website.eu-west-2.amazonaws.com"
            }
          }
        ]
      }
    },
    "s3homepetsukcom": {  
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "homepetsuk.com",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "error.html"
        },
        "AccessControl": "Private",
        "VersioningConfiguration": {
          "Status": "Suspended"
        }
      }
    },
    "s3wwwhomepetsukcom": { 
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "www.homepetsuk.com",
        "AccessControl": "Private",
        "VersioningConfiguration": {
          "Status": "Suspended"
        },
        "WebsiteConfiguration": {
          "RedirectAllRequestsTo": {
            "HostName": "homepetsuk.com"
          }
        }
      }
    },
    "s3policyhomepetsukcom": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "s3homepetsukcom"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AddPerm",
              "Effect": "Allow",
              "Principal": "*",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    "homepetsuk",
                    ".com/*"
                  ]
                ]
              }
            }
          ]
        }
      }
    },
    "homepetsukdeploy" : {
      "Type" : "AWS::IAM::User",
        "Properties" : {
          "Policies" : [ {
             "PolicyName" : "accessToDeployWebsite",
             "PolicyDocument" : {
                "Version": "2012-10-17",
                "Statement" : [ {
                   "Effect" : "Allow",
                   "Action" : ["s3:PutObject","s3:PutObjectAcl", "s3:DeleteObject"],
                   "Resource" : [ "arn:aws:s3:::homepetsuk.com/*"]
                },
                {
                   "Effect" : "Allow",
                   "Action" : ["s3:ListBucket"],
                   "Resource" : [ "arn:aws:s3:::homepetsuk.com"]
                }]
              }
          }]
       }
    } 
  },
  "Description": "homepetsuk.com"
}