{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "dnspurrsandpawsukcom": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneName": "purrsandpawsuk.com.",
        "RecordSets": [
          {
            "Name": "purrsandpawsuk.com.",
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z3GKZC51ZF0DB4",
              "DNSName": "s3-website.eu-west-2.amazonaws.com"
            }
          }
        ]
      }
    },
    "dnswwwpurrsandpawsukcom": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneName": "purrsandpawsuk.com.",
        "RecordSets": [
          {
            "Name": "www.purrsandpawsuk.com.",
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z3GKZC51ZF0DB4",
              "DNSName": "s3-website.eu-west-2.amazonaws.com"
            }
          }
        ]
      }
    },
    "dnsemail": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneName": "purrsandpawsuk.com.",
        "RecordSets": [
          {
            "Name": "purrsandpawsuk.com.",
            "Type": "MX",
            "TTL" : "300",
            "ResourceRecords" : ["10 mx.zoho.com.", "20 mx2.zoho.com.", "50 mx3.zoho.com."]
          }
        ]
      }
    },
    "s3purrsandpawsukcom": {  
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "purrsandpawsuk.com",
        "WebsiteConfiguration": {
          "IndexDocument": "index",
          "ErrorDocument": "error"
        },
        "AccessControl": "Private",
        "VersioningConfiguration": {
          "Status": "Suspended"
        }
      }
    },
    "s3wwwpurrsandpawsukcom": { 
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "www.purrsandpawsuk.com",
        "AccessControl": "Private",
        "VersioningConfiguration": {
          "Status": "Suspended"
        },
        "WebsiteConfiguration": {
          "RedirectAllRequestsTo": {
            "HostName": "purrsandpawsuk.com"
          }
        }
      }
    },
    "s3policypurrsandpawsukcom": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "s3purrsandpawsukcom"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AddPerm",
              "Effect": "Allow",
              "Principal": "*",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    "purrsandpawsuk",
                    ".com/*"
                  ]
                ]
              }
            }
          ]
        }
      }
    },
    "purrsandpawsukdeploy" : {
      "Type" : "AWS::IAM::User",
        "Properties" : {
          "Policies" : [ {
             "PolicyName" : "accessToDeployWebsite",
             "PolicyDocument" : {
                "Version": "2012-10-17",
                "Statement" : [ {
                   "Effect" : "Allow",
                   "Action" : ["s3:PutObject","s3:PutObjectAcl", "s3:DeleteObject"],
                   "Resource" : [ "arn:aws:s3:::purrsandpawsuk.com/*"]
                },
                {
                   "Effect" : "Allow",
                   "Action" : ["s3:ListBucket"],
                   "Resource" : [ "arn:aws:s3:::purrsandpawsuk.com"]
                }]
              }
          }]
       }
    } 
  },
  "Description": "purrsandpawsuk.com"
}